<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox spacing="20" alignment="CENTER" prefHeight="300.0" prefWidth="400.0"
      xmlns="http://javafx.com/javafx/17"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="controller.LoginController">

    <padding>
        <Insets top="50" right="50" bottom="50" left="50"/>
    </padding>

    <Label text="Connexion" style="-fx-font-size: 24px; -fx-font-weight: bold;"/>

    <Separator prefWidth="200"/>

    <TextField fx:id="tfUsername" promptText="Nom d'utilisateur" prefWidth="250"/>
    <PasswordField fx:id="tfPassword" promptText="Mot de passe" prefWidth="250"/>

    <Button text="Se connecter" onAction="#login" prefWidth="250"
            style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-font-size: 14px;"/>

</VBox>