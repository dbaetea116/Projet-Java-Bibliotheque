<AnchorPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="controller.EmpruntsController">

    <TableView fx:id="tableEmprunts" layoutX="20" layoutY="20" prefWidth="600" prefHeight="300">
        <columns>
            <TableColumn fx:id="colLivre" text="ID Livre"/>
            <TableColumn fx:id="colMembre" text="ID Membre"/>
            <TableColumn fx:id="colDate" text="Date Emprunt"/>
            <TableColumn fx:id="colRetour" text="Retour Prévu"/>
            <TableColumn fx:id="colRetourReel" text="Retour Réel"/>
        </columns>
    </TableView>

    <TextField fx:id="tfIdLivre" layoutX="650" layoutY="20" promptText="ID Livre"/>
    <TextField fx:id="tfIdMembre" layoutX="650" layoutY="60" promptText="ID Membre"/>

    <Button text="Emprunter" layoutX="650" layoutY="110" onAction="#emprunterLivre"/>
    <Button text="Retourner" layoutX="750" layoutY="110" onAction="#retournerLivre"/>

</AnchorPane>
