<AnchorPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="controller.LoginController">

    <children>
        <Label text="Connexion" layoutX="150" layoutY="20" style="-fx-font-size: 24;" />

        <TextField fx:id="tfUsername" layoutX="100" layoutY="80" promptText="Nom d'utilisateur"/>
        <PasswordField fx:id="tfPassword" layoutX="100" layoutY="120" promptText="Mot de passe"/>

        <Button text="Se connecter" layoutX="130" layoutY="170" onAction="#login"/>
    </children>
</AnchorPane>
