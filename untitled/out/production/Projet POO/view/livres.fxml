<AnchorPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="controller.LivresController">

    <TableView fx:id="tableLivres" layoutX="20" layoutY="20" prefWidth="400" prefHeight="300">
        <columns>
            <TableColumn fx:id="colTitre" text="Titre" />
            <TableColumn fx:id="colAuteur" text="Auteur" />
            <TableColumn fx:id="colStock" text="Stock" />
        </columns>
    </TableView>

    <TextField fx:id="tfTitre" layoutX="450" layoutY="20" promptText="Titre"/>
    <TextField fx:id="tfAuteur" layoutX="450" layoutY="60" promptText="Auteur"/>
    <TextField fx:id="tfAnnee" layoutX="450" layoutY="100" promptText="Année"/>
    <TextField fx:id="tfCategorie" layoutX="450" layoutY="140" promptText="Catégorie"/>
    <TextField fx:id="tfStock" layoutX="450" layoutY="180" promptText="Stock"/>

    <Button text="Ajouter" layoutX="450" layoutY="230" onAction="#ajouterLivre"/>
    <Button text="Modifier" layoutX="540" layoutY="230" onAction="#modifierLivre"/>
    <Button text="Supprimer" layoutX="630" layoutY="230" onAction="#supprimerLivre"/>
</AnchorPane>
