<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<BorderPane prefHeight="400.0" prefWidth="800.0"
            xmlns="http://javafx.com/javafx/17"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.example.javaprojetfinal.Controller.LivresController">

    <center>
        <TableView fx:id="tableLivres">
            <columns>
                <TableColumn fx:id="colTitre" text="Titre" prefWidth="150"/>
                <TableColumn fx:id="colAuteur" text="Auteur" prefWidth="150"/>
                <TableColumn fx:id="colStock" text="Stock" prefWidth="100"/>
            </columns>
        </TableView>
    </center>

    <right>
        <VBox spacing="10" alignment="TOP_CENTER" prefWidth="250">
            <padding>
                <Insets top="20" right="20" bottom="20" left="20"/>
            </padding>

            <TextField fx:id="tfTitre" promptText="Titre" maxWidth="Infinity"/>
            <TextField fx:id="tfAuteur" promptText="Auteur" maxWidth="Infinity"/>
            <TextField fx:id="tfAnnee" promptText="Année" maxWidth="Infinity"/>
            <TextField fx:id="tfCategorie" promptText="Catégorie" maxWidth="Infinity"/>
            <TextField fx:id="tfStock" promptText="Stock" maxWidth="Infinity"/>

            <Separator/>

            <HBox spacing="10" alignment="CENTER">
                <Button text="Ajouter" onAction="#ajouterLivre" prefWidth="70"/>
                <Button text="Modifier" onAction="#modifierLivre" prefWidth="70"/>
            </HBox>

            <Button text="Supprimer" onAction="#supprimerLivre" maxWidth="Infinity"/>
        </VBox>
    </right>

</BorderPane>